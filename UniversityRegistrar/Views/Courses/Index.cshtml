@{
  Layout = "_Layout";
}

@using UniversityRegistrar.Models
@model List<UniversityRegistrar.Models.Course>

<h1>Courses</h1>

@if (@Model.Count == 0)
{
  <h3>No Courses Have Been Added</h3>
}
else{
  <ul>
    @foreach(Course course in Model)
    {
      <li>@Html.ActionLink($"{course.CourseTitle}", "Details", new { id = course.CourseId })</li>
    }
  </ul>
}